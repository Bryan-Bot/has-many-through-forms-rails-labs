<%= form_for @post do |f|%>
    <%= f.label :title%>
    <%= f.text_field :title%>

    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name%>

    <%= f.fields_for :categories, @post.categories.new do |categories_fields|%>
    <%= categories_fields.label :name, "Category"%>
    <%= categories_fields.text_field :name%>
    <%end%>
    

    <%= f.submit%>
<% end %>
